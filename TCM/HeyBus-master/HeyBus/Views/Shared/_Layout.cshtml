                                <a href="~/Clientes/Perfil" class="dropdown-item hover-laranja ml-2" style="text-decoration:none">&#xe138; Carrinho</a>
                            </div>                            
                            <a href="/Acesso/LogoutCli" class="dropdown-item border-top hover-laranja text-right" style="text-decoration:none">&#xe127;Logout</a>
                        </div>
                    </li>
                </ul>              
            </div>
        </nav>
        <div class="body-content">
            @RenderBody()

            <footer class="rodape">
                <div class="rodape-logo">
                    <img src="~/images/logoheybus-branco.png" />
                </div>
                <div class="rodape-linksrap">
                    <h1>Links rápidos</h1>
                    <h2><a href="~/Home/Sobre">A empresa</a></h2>
                    <h2><a href="~/Home/Servicos">Serviços</a></h2>
                    <h2><a href="~/Acesso/LoginFuncionario">Portal do Funcionário</a></h2>
                </div>
                <div class="rodape-faleConosco">
                    <h1><a href="~/Home/Contato">FALE CONOSCO</a></h1>
                    <h2><a href="~/Home/Contato#msg">Enviar Mensagem</a></h2>
                    <h2>Dúvidas, Horários, Preços e Compra de Passagens<br /><span>3231-6624</span><br /><small>Segunda a Sexta de 09h às 21h</small></h2>
                </div>
                <div class="rodape-redes">
                    <h2><a href="#" class="mr-2">facebook</a> <a href="#" class="mr-2">twitter</a> <a href="#">instagram</a></h2>
                </div>
                <div class="rodape-copyright">
                    <hr style="background-color: rgba(255,255,255,.4); opacity:.2" />
                    <p>&copy; @DateTime.Today.Year - HeyUser Ltda. <br /> <small>designed by HeyUser</small></p>
                </div>
            </footer>
        </div>

        <environment include="Development">
            <script src="~/Scripts/jquery.js"></script>
            <script src="~/Scripts/jquery.mask.min.js"></script>
            <script src="~/Scripts/bootstrap-notify.min.js"></script>
            <script src="~/Scripts/bootstrap.js"></script>
            <script src="~/Scripts/site.js" asp-append-version="true"></script>
        </environment>
        <environment exclude="Development">
            <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.3.1.min.js"
                    asp-fallback-src="~/Scripts/jquery.min.js"
                    asp-fallback-test="window.jQuery"
                    crossorigin="anonymous"
                    integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
            </script>
            <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/4.1.1/bootstrap.min.js"
                    asp-fallback-src="~/Scripts/bootstrap.min.js"
                    asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                    crossorigin="anonymous"
                    integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
            </script>

