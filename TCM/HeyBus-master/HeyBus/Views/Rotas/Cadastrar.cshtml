@{
    Layout = "~/Views/Shared/_LayoutFuncionario .cshtml";
}
@model HeyBus.Models.Rota
<header class="cabecalho d-flex justify-content-between align-items-baseline">
    <h1><span>Rota |</span> Cadastro</h1>
    <img src="~/images/logoheybus-branco.png" />
</header>
<div class="box-cadastro">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
        <h1>Cadastro de rotas</h1>
        <h2>
            Realize o preenchimento de <span>todos</span> os campos, com <span>atenção</span>, para o cadastro ser efetuado corretamente.
            <br /><span>Observações:</span> Os campos com <span style="color:red">*(asterisco)</span> são de preenchimento obrigatório.
        </h2>
        <hr style="margin-left: 20px;margin-right:20px;margin-top:4px;border:.8px solid rgba(42,42,42,.27);margin-top:60px" />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group ml-2 ml-sm-3">
                <span style="color:red">*</span>@Html.LabelFor(model => model.origem_Rota, htmlAttributes: new { @class = "control-label" })
                <div class="col-11 col-md-10">
                    @Html.EditorFor(model => model.origem_Rota, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.origem_Rota, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group ml-2 ml-sm-3">
                <span style="color:red">*</span>@Html.LabelFor(model => model.destino_Rota, htmlAttributes: new { @class = "control-label" })
                <div class="col-11 col-md-10">
                    @Html.EditorFor(model => model.destino_Rota, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.destino_Rota, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group ml-2 ml-sm-3">
                <span style="color:red">*</span>@Html.LabelFor(model => model.distancia_Rota, htmlAttributes: new { @class = "control-label" })
                <div class="col-11 col-md-10">
                    @Html.EditorFor(model => model.distancia_Rota, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.distancia_Rota, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group ml-2 ml-sm-3">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Cadastrar" class="btn-laranja" style="font-weight:400" />
                </div>
            </div>
        </div>
    }

</div>