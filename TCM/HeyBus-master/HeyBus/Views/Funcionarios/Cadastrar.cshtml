@{
    Layout = "~/Views/Shared/_LayoutFuncionario .cshtml";
}
@model HeyBus.Models.Funcionario
<header class="cabecalho d-flex justify-content-between align-items-baseline">
    <h1><span>Funcionário |</span> Cadastro</h1>
    <img src="~/images/logoheybus-branco.png" />
</header>
<div class="box-cadastro">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h1>Cadastro de funcionário</h1>
            <h2>
                Realize o preenchimento de <span>todos</span> os campos, com <span>atenção</span>, para o cadastro ser efetuado corretamente.
                <br /><span>Observações:</span> Os campos com <span style="color:red">*(asterisco)</span> são de preenchimento obrigatório.
            </h2>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <h3 style="margin-top:60px">Dados Pessoais</h3>
            <hr style="margin-left: 20px;margin-right:20px;margin-top:4px;border:.8px solid rgba(42,42,42,.27)" />
            <div class="form-group ml-2 ml-sm-4">
                <span style="color:red">*</span>@Html.LabelFor(model => model.nome_Funcionario, htmlAttributes: new { @class = "control-label" })
                <div class="col-11 col-md-10">
                    @Html.EditorFor(model => model.nome_Funcionario, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.nome_Funcionario, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group ml-2 ml-sm-4">
                <span style="color:red">*</span>@Html.LabelFor(model => model.cpf_Funcionario, htmlAttributes: new { @class = "control-label" })
                <div class="col-11 col-md-10">
                    @Html.EditorFor(model => model.cpf_Funcionario, new { htmlAttributes = new { @class = "form-control maskcpf" } })
                    @Html.ValidationMessageFor(model => model.cpf_Funcionario, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group ml-2 ml-sm-4">
                <span style="color:red">*</span>@Html.LabelFor(model => model.email_Funcionario, htmlAttributes: new { @class = "control-label" })
                <div class="col-11 col-md-10">
                    @Html.EditorFor(model => model.email_Funcionario, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.email_Funcionario, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group ml-2 ml-sm-4">
                <span style="color:red">*</span>@Html.LabelFor(model => model.endereco_Funcionario, htmlAttributes: new { @class = "control-label" })
                <div class="col-11 col-md-10">
                    @Html.EditorFor(model => model.endereco_Funcionario, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.endereco_Funcionario, "", new { @class = "text-danger" })
                </div>
            </div>

            <h3>Dados de acesso</h3>
            <hr style="margin-left: 20px;margin-right:20px;margin-top:4px;border:.8px solid rgba(42,42,42,.27)" />
            <div class="form-group ml-2 ml-sm-4">
                <span style="color:red">*</span>@Html.LabelFor(model => model.login_Acesso, htmlAttributes: new { @class = "control-label" })
                <div class="col-11 col-md-10">
                    @Html.EditorFor(model => model.login_Acesso, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.login_Acesso, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group ml-2 ml-sm-4">
                <span style="color:red">*</span>@Html.LabelFor(model => model.password_Acesso, htmlAttributes: new { @class = "control-label" })
                <div class="col-11 col-md-10">
                    @Html.EditorFor(model => model.password_Acesso, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.password_Acesso, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group mt-5 ml-2 ml-sm-4">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Cadastrar" class="btn-laranja" style="font-weight:400" />
                </div>
            </div>
        </div>
    }
</div>


