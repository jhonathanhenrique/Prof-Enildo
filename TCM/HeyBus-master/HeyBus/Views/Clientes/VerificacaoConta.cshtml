
@{
    ViewBag.Title = "VerificacaoConta";
}

<h2>VerificacaoConta</h2>

@if (ViewBag.Status != null && Convert.ToBoolean(ViewBag.Status))
{
    <div class="alert alert-success">
        <strong>Sucesso!</strong> Sua conta foi ativada com sucesso. Clique aqui para @Html.ActionLink("Entrar", "Entrar", "Cliente")
    </div>
}
else
{
    <div class="alert alert-danger">
        <strong>Erro!</strong> @ViewBag.Message
    </div>
}

